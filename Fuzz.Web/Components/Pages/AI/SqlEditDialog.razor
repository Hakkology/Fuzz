@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.body2" Class="mb-3">Agent tarafından üretilen sorguyu düzeltin. Bu düzeltme, agent'ın gelecekteki performansını artırmak için kullanılacaktır.</MudText>
        <MudTextField T="string" 
                      @bind-Value="Sql" 
                      Label="SQL Sorgusu" 
                      Variant="Variant.Outlined" 
                      Lines="10" 
                      Style="font-family: monospace; color: #00ff00; background: #1a1a1a;" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">İptal</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Kaydet</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string? Sql { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(Sql));
    private void Cancel() => MudDialog.Cancel();
}
