            <MudStack Spacing="2">
                <MudText Typo="Typo.h3" Class="fuzz-hero-title">
                    <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Large" Color="Color.Primary" Class="mr-2" />
